@model IEnumerable<OnlineBookServices.ViewModel.ThumbnailBoxViewModel>

@{
    ViewBag.Title = "Home Page";
}

<h2>Welcome to Our Online Book Services</h2>

@* @Html.Partial("_BackgroundImagePartialView")*@

<div class="row">
    <div class="pull-right" style="padding-right:15px;">
        <button type="submit" value="Search" class="btn btn-sm btn-primary">
            <span class="glyphicon glyphicon-search">&nbsp;Search </span>
        </button>

    </div>
    <div class="pull-right">
        @Html.Editor("search", new { htmlattributes = new { @class = "form-control input-sm" } });
    </div>
</div>

<br />

<div class="row">
    @foreach (var area in Model)
    {
        @Html.Partial("_ThumbnailAreaPartial", area);
    }
</div>